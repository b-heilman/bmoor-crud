{
	"name": "bmoor-crud",
	"version": "0.6.6",
	"author": "Brian Heilman <das.ist.junk@gmail.com>",
	"description": "A way of managing models and routes",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/b-heilman/bmoor-crud.git"
	},
	"main": "src/index.js",
	"dependencies": {
		"bmoor": "^0.10.1",
		"bmoor-data": "^0.10.3",
		"bmoor-schema": "^0.8.1",
		"knex": "^0.95.2",
		"mysql": "^2.18.1",
		"rxjs": "^6.6.3"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"@typescript-eslint/parser": "^5.10.1",
		"body-parser": "^1.19.2",
		"chai": "^4.2.0",
		"eslint": "^8.7.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"express": "^4.17.3",
		"jsdoc": "^3.6.6",
		"jshint": "^2.12.0",
		"mocha": "^9.0.2",
		"node-fetch": "^2.6.7",
		"prettier": "^2.5.1",
		"sinon": "^9.2.0",
		"typescript": "^4.5.4"
	},
	"scripts": {
		"lint": "node ./node_modules/eslint/bin/eslint ./src",
		"test": "mocha --recursive \"./src/**/*.spec.js\" ./src/integration.spec.js",
		"test:file": "mocha",
		"prettier": "npx prettier --write .",
		"finalize": "npm run lint && npm run prettier && npm run test"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"commonjs": true,
			"mocha": true
		},
		"extends": [
			"eslint:recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 13,
			"es2021": true,
			"sourceType": "module"
		},
		"plugins": [
			"prettier",
			"@typescript-eslint"
		],
		"rules": {},
		"overrides": [
			{
				"files": "**/*.ts",
				"extends": [
					"eslint:recommended",
					"plugin:@typescript-eslint/recommended",
					"prettier"
				]
			}
		]
	},
	"prettier": {
		"printWidth": 80,
		"tabWidth": 2,
		"useTabs": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"trailingComma": "none",
		"bracketSpacing": false
	}
}
